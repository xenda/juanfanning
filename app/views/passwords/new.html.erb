<section>
<h2>Forgot your password?</h2>

<% form_for resource_name, resource, :url => password_path(resource_name) do |f| %>
  <%= f.error_messages %>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.submit "Get new password" %></p>
<% end %>

<nav class="navigation">
<%= render :partial => "shared/devise_links" %>
</nav>

</section>