!!! 5
%html
  %head
    %title= [@title, "DigitalMuni"].compact.join(" | ")
    = stylesheet_link_tag 'reset', '../javascripts/fancybox/jquery.fancybox-1.3.1','style','formtastic', 'formtastic_changes','admin_style', :cache => "admin_styles"
    /[if IE]
      :erb
        <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>

    = yield :include
  /[if lt IE 7 ] 
    :erb
      <body class="ie6 <%= controller.controller_name %>">
  /[if IE 7 ]
    :erb
      <body class="ie7 <%= controller.controller_name %>">
  /[if IE 8 ]
    :erb
      <body class="ie8 <%= controller.controller_name %>">
  /[if IE 9 ] 
    :erb
      <body class="ie9 <%= controller.controller_name %>">
  / [if (gt IE 9)|!(IE)]><!
  %body{:class=>controller.controller_name}      
    #header
      #header_wrapper.wrap
        #header_content
          %h1
            - link_to "/admin" do
              <strong>DigitalMuni</strong>Dashboard
          #options
            %ul.menu
              %li= link_to 'Site', root_path
              %li= link_to 'Dashboard', "/admin"
              = display_app_models_links :ul => false
              - if current_admin.complete?
                %li= link_to 'Reports', admin_reports_path
              
            - if admin_signed_in?
              #logged_as
                = "Logged as"
                = link_to current_admin.name, edit_registration_path(current_admin)
                = link_to "logout", destroy_admin_session_path
          .clear
          
    #container.wrap
      
      = yield :main_banner
    
      #main
        = yield
      #sidebar
        = yield :sidebar

    #footer.wrap
      .left
        Copyright &copy; 2010 
        = link_to "DigitalMuni", root_path
        All rights reserved &reg;
      .right
        Dashboard
      .clear
    = javascript_include_tag 'jquery', 'jrails','fancybox/jquery.fancybox-1.3.1.pack','fancybox/jquery.easing-1.3.pack','fancybox/jquery.mousewheel-3.0.2.pack','tiny_mce/tiny_mce','tiny_mce/jquery.tinymce','editor_loader',"lib/jquery.bgiframe.min","lib/jquery.ajaxQueue","lib/thickbox-compressed","jquery.autocomplete.min",'application'