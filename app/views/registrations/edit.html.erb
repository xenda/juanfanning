<h2>Actualizando <%= resource_name.to_s.humanize %></h2>

<% form_for resource_name, resource, :url => registration_path(resource_name), :html => { :method => :put } do |f| -%>
  <%= f.error_messages %>

  <p><%= f.label :name, "Nombre" %></p>
  <p><%= f.text_field :name %></p>

  <p><%= f.label :email %></p>
  <p><%= f.text_field :email %></p>

  <p><%= f.label :password, "Contraseña" %> <i>(en blanco si no desea cambiarla)</i></p>
  <p><%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation, "Confirmar contraseña" %></p>
  <p><%= f.password_field :password_confirmation %></p>

  <p><%= f.submit "Actualizar" %></p>
<% end -%>

