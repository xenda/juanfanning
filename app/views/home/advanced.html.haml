%section
  %h2 Advanced search
  
  - semantic_form_for :search, :url => search_path do |f|
    - f.inputs do
      = f.input :keywords, :hint => "Filter by Issuer, CUSIP or any other term"
      = f.input :search_type, :as => :radio, :collection => Search::SEARCH_TYPES, :label => false

    - f.inputs "Filter results" do
      = f.input :results_type, :as => :radio, :collection => Search::RESULT_TYPES, :label => false
      = f.input :state, :as => :select, :collection => Project.states
      = f.input :underwriter, :as => :select, :collection => Project.underwriters, :label => "Underwriter/Financial Advisor"
      = f.input :timeframe, :as => :select, :collection => Search::TIMEFRAMES
    
    - f.inputs "Sort results" do
      %li
        %label{:for => "search_sort"} Sort by
        = f.select :sort, options_for_select(Search::SORT_LIST)
        = f.select :sort_type, options_for_select(Search::SORT_TYPES)
    - f.buttons do
      = f.commit_button "Search"
      /     
      / = f.input :sort, :as => :select, :collection => Search::SORT_LIST
      / = f.input :sort_type, :as => :select, :collection => Search::SORT_TYPES, :label => "Order"

  / :keywords, :search_type, :results_type, :state, :underwriter, :timeframe, :sort, :sort_type
                  
