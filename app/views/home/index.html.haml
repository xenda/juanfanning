%section
  %h2 Current Projects documents
  
  %table
    %thead
      %tr
        %th{:width => 100} Status
        %th{:width => 100} State
        %th{:width => 400} Issuer Description
        %th Date Posted
        %th 
    %tbody
      - @projects.each do |p|
        %tr{:class => (cycle("even","odd"))}
          %td= p.project_type.humanize if p.status
          %td= p.state.upcase
          %td
            - link_to access_member_project_path(p) do
              = p.issuer_name

            %br
            = truncate(strip_tags(p.description), 400)
          %td= p.created_at.to_s(:short) if p.created_at
          %td.tdtip
            = link_to "Quick info", "#", :class=>"tip"
            .top 
              %h3 Quick info
              %ul
                %li 
                  .content
                    %strong= p.issuer_name
                    = strip_tags p.description
                - unless p.ratings.blank?
                  %li
                    .content
                      %strong Ratings
                      - if p.ratings
                        = p.ratings.split(",").join("<br />")
                - unless p.underwriters.blank?
                  %li
                    .content
                      %strong Underwriter(s)
                      = p.underwriters
                - unless p.bond_amount.blank?
                  %li
                    .content
                      %strong Dollar value
                      = p.bond_amount
                  
          